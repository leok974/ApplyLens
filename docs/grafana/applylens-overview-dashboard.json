{
  "dashboard": {
    "title": "ApplyLens Overview",
    "description": "Real-time email analytics powered by BigQuery data warehouse",
    "tags": ["applylens", "email", "analytics"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "1m",
    "panels": [
      {
        "id": 1,
        "title": "Daily Email Activity (Last 30 Days)",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "datasource": {
              "type": "postgres",
              "uid": "${DS_BIGQUERY}"
            },
            "format": "time_series",
            "rawQuery": true,
            "rawSql": "SELECT\n  TIMESTAMP(day) AS time,\n  messages_count AS \"Messages\",\n  unique_senders AS \"Unique Senders\"\nFROM `${project_id}.applylens_mart.mart_email_activity_daily`\nWHERE day >= DATE_SUB(CURRENT_DATE(), INTERVAL 30 DAY)\nORDER BY day ASC",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisCenteredZero": false,
              "axisColorMode": "text",
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "tooltip": false,
                "viz": false,
                "legend": false
              },
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "auto",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            },
            "unit": "short"
          },
          "overrides": []
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          },
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 2,
        "title": "Top 10 Senders (Last 30 Days)",
        "type": "barchart",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "datasource": {
              "type": "postgres",
              "uid": "${DS_BIGQUERY}"
            },
            "format": "table",
            "rawQuery": true,
            "rawSql": "SELECT\n  from_email AS \"Sender\",\n  messages_30d AS \"Messages\",\n  ROUND(total_size_mb, 2) AS \"Size (MB)\"\nFROM `${project_id}.applylens_mart.mart_top_senders_30d`\nORDER BY messages_30d DESC\nLIMIT 10",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisCenteredZero": false,
              "axisColorMode": "text",
              "axisLabel": "",
              "axisPlacement": "auto",
              "fillOpacity": 80,
              "gradientMode": "none",
              "hideFrom": {
                "tooltip": false,
                "viz": false,
                "legend": false
              },
              "lineWidth": 1,
              "scaleDistribution": {
                "type": "linear"
              }
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 100
                }
              ]
            }
          },
          "overrides": []
        },
        "options": {
          "orientation": "horizontal",
          "xTickLabelRotation": 0,
          "xTickLabelSpacing": 100,
          "showValue": "auto",
          "barWidth": 0.97,
          "groupWidth": 0.7,
          "barRadius": 0,
          "fullHighlight": false,
          "tooltip": {
            "mode": "single",
            "sort": "none"
          },
          "legend": {
            "showLegend": false
          }
        }
      },
      {
        "id": 3,
        "title": "Email Categories Distribution (Last 30 Days)",
        "type": "piechart",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "datasource": {
              "type": "postgres",
              "uid": "${DS_BIGQUERY}"
            },
            "format": "table",
            "rawQuery": true,
            "rawSql": "SELECT\n  category AS \"Category\",\n  messages_30d AS \"Messages\"\nFROM `${project_id}.applylens_mart.mart_categories_30d`\nORDER BY messages_30d DESC\nLIMIT 10",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "hideFrom": {
                "tooltip": false,
                "viz": false,
                "legend": false
              }
            },
            "mappings": []
          },
          "overrides": []
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": [
              "lastNotNull"
            ],
            "fields": ""
          },
          "pieType": "donut",
          "tooltip": {
            "mode": "single",
            "sort": "none"
          },
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "right",
            "values": [
              "value",
              "percent"
            ]
          },
          "displayLabels": [
            "percent"
          ]
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "project_id",
          "type": "constant",
          "label": "BigQuery Project ID",
          "description": "Your Google Cloud project ID",
          "current": {
            "value": "your-project-id",
            "text": "your-project-id"
          },
          "options": [
            {
              "value": "your-project-id",
              "text": "your-project-id"
            }
          ],
          "hide": 0
        }
      ]
    },
    "time": {
      "from": "now-30d",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    }
  },
  "folderUid": "",
  "overwrite": true
}

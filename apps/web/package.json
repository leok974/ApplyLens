{
  "name": "applylens-web",
  "private": true,
  "version": "0.6.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:docker": "set VITE_API_BASE=http://api:8003 && vite",
    "build": "vite build",
    "preview": "vite preview",
    "icons": "node scripts/gen-icons.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "testenv": "set E2E_BASE_URL=http://localhost:5175 && npm run test:e2e -- e2e/search-derived-and-tooltip --reporter=list",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:logo": "playwright test tests/ui/header-logo.spec.ts",
    "e2e:search": "playwright test tests/search.interactions.spec.ts",
    "e2e:heartbeat": "playwright test tests/e2e/ux-heartbeat.spec.ts",
    "e2e:headed": "playwright test --headed",
    "e2e:auth": "playwright test tests/e2e/auth.*.spec.ts",
    "test:smoke": "playwright test tests/smoke/inbox-has-data.spec.ts --config=playwright.config.ts --workers=2",
    "test:e2e": "playwright test --config=playwright.config.ts --workers=2",
    "test:e2e:ui": "playwright test --config=playwright.config.ts --ui --workers=1",
    "test:e2e:trace": "playwright test --config=playwright.config.ts --trace=on --workers=1",
    "test:e2e:prod": "cross-env E2E_BASE_URL=https://applylens.app/web playwright test --grep @prodSafe --reporter=line",
    "test:prod-safe": "cross-env E2E_BASE_URL=https://applylens.app playwright test tests/e2e/prod-search-smoke.spec.ts --reporter=list",
    "test:prod:smoke": "cross-env PROD_BASE_URL=https://applylens.app playwright test tests/prod/prod-smoke.spec.ts --workers=2 --reporter=list",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:smoke": "playwright test --grep @smoke",
    "test:e2e:smoke:locked": "PW_LOCK_NET=1 playwright test --grep @smoke",
    "test:e2e:debug": "PWDEBUG=1 playwright test",
    "test:e2e:report": "playwright show-report reports/html",
    "test:e2e:ci": "BASE_URL=http://localhost:5173 playwright test --reporter=list,junit,html",
    "test:e2e:allow-net": "PW_ALLOW_NET=1 playwright test",
    "test:e2e:auth": "playwright test --project=chromium-auth",
    "test:e2e:auth:headed": "playwright test --project=chromium-auth --headed",
    "test:e2e:login": "RUN_LOGIN=1 playwright test tests/e2e/login-bootstrap.spec.ts --project=chromium",
    "test:e2e:login:headed": "RUN_LOGIN=1 playwright test tests/e2e/login-bootstrap.spec.ts --project=chromium --headed",
    "test:e2e:auth:refresh": "RUN_LOGIN=1 STORAGE_STATE=tests/.auth/state.json playwright test tests/e2e/login-bootstrap.spec.ts --project=chromium",
    "test:e2e:auth:refresh:headed": "RUN_LOGIN=1 STORAGE_STATE=tests/.auth/state.json playwright test tests/e2e/login-bootstrap.spec.ts --project=chromium --headed",
    "e2e:prod:mailbox-theme": "playwright test tests/e2e/settings-mailbox-theme.spec.ts --project=chromium",
    "e2e:dev:mailbox-theme": "playwright test tests/e2e/settings-mailbox-theme.spec.ts --project=chromium"
  },
  "_comment_e2e_scripts": "E2E mailbox theme scripts rely on env vars. Example (PowerShell, prod): $env:E2E_BASE_URL='https://applylens.app'; $env:E2E_API='https://api.applylens.app/api'; $env:E2E_AUTH_STATE='tests/.auth/prod.json'; pnpm e2e:prod:mailbox-theme",
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/dompurify": "^3.0.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.7",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.545.0",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-day-picker": "^9.11.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.17",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "sharp": "^0.34.4",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4.1.14",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.5.4",
    "vite": "^5.4.8",
    "vitest": "^3.2.4"
  }
}

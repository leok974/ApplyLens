{
  "manifest_version": 3,
  "name": "ApplyLens Companion",
  "version": "0.1.0",
  "description": "Autofill ATS forms and draft recruiter DMs using your ApplyLens profile.",
  "action": { "default_popup": "popup.html" },
  "background": { "service_worker": "sw.js", "type": "module" },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://api.applylens.app/*",
    "https://jobs.lever.co/*",
    "https://boards.greenhouse.io/*",
    "https://*.myworkdayjobs.com/*",
    "https://careers.smartrecruiters.com/*",
    "https://jobs.ashbyhq.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://jobs.lever.co/*",
        "https://boards.greenhouse.io/*",
        "https://*.myworkdayjobs.com/*",
        "https://careers.smartrecruiters.com/*",
        "https://jobs.ashbyhq.com/*"
      ],
      "js": ["config.js", "learning.mergeMaps.js", "learning.profileClient.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
